<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.krish</groupId>
	<artifactId>Hamleys</artifactId>
	<version>1.0-SNAPSHOT</version>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<aspectj.version>1.9.21.1</aspectj.version>
		<maven.compiler.source>21</maven.compiler.source>
		<maven.compiler.target>21</maven.compiler.target>
		<xmlPath>src/test/resources</xmlPath>
		<suiteXmlFile>LocalTestSuite.xml</suiteXmlFile>
		<environment>QA</environment>
		<browser>chrome</browser>
		<defaultTimeout>30</defaultTimeout>
	</properties>
	<!-- Mentioned name and url -->
	<name>Hamleys QA Automation</name>
	<url>http://www.example.com</url>
	<!-- QA Automation developers. 23-54 -->
	<developers>
		<developer>
			<id>KrishShivam</id>
			<name>Shivam Rai</name>
			<email>shivam.rai@krishtechnolabs.com</email>
		</developer>
	</developers>
	<dependencies>
		<!-- Dependencies -->
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.2.5</version>
				<configuration>
					<!-- Use properties for suiteXmlFile -->
					<suiteXmlFiles>
						<suiteXmlFile>${xmlPath}/${suiteXmlFile}</suiteXmlFile>
					</suiteXmlFiles>
					<!-- Add other configurations as needed -->
					<argLine>
                        -javaagent:"${settings.localRepository}/org/aspectj/aspectjweaver/${aspectj.version}/aspectjweaver-${aspectj.version}.jar"
                    </argLine>
					<systemPropertyVariables>
						<!--suppress UnresolvedMavenProperty -->
						<propertyName>${environment}</propertyName>
						<!--suppress UnresolvedMavenProperty -->
						<propertyName>${browser}</propertyName>
						<!--suppress UnresolvedMavenProperty -->
						<propertyName>${defaultTimeout}</propertyName>
					</systemPropertyVariables>
					<reportsDirectory>${project.build.directory}/surefire-reports</reportsDirectory>
				</configuration>
			</plugin>
			<!-- Allure plugin -->
			<plugin>
				<groupId>io.qameta.allure</groupId>
				<artifactId>allure-maven</artifactId>
				<version>2.12.0</version>
				<configuration>
					<reportVersion>2.13.7</reportVersion>
					<!-- Use the correct directory for test results -->
					<resultsDirectory>${project.build.directory}/surefire-reports</resultsDirectory>
					<!-- Specify the Git URL for Allure report linking -->
					<properties>
						<allure.git.url>https://github.com/SohamQAKrish/HamleysAutomation</allure.git.url>
						<!-- Other properties -->
					</properties>
				</configuration>
			</plugin>
			<!-- Other plugins -->
		</plugins>
	</build>
</project>
